{
  "name": "work-zilla-agent",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite --config renderer/vite.config.js",
    "build": "vite build --config renderer/vite.config.js",
    "preview": "vite preview --config renderer/vite.config.js",
    "electron": "electron .",
    "start": "concurrently -k \"npm:dev\" \"wait-on tcp:5173 && electron .\"",
    "dist": "npm run build && electron-builder -w --x64",
    "dist:mac": "npm run build && electron-builder -m --x64",
    "dist:win": "npm run build && electron-builder -w --x64"
  },
  "dependencies": {
    "better-sqlite3": "^11.6.0",
    "chokidar": "^3.6.0",
    "fetch-cookie": "^3.1.0",
    "form-data": "^4.0.0",
    "keytar": "^7.9.0",
    "node-fetch": "^3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tough-cookie": "^4.1.3"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "vite": "^5.4.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.workzilla.agent",
    "productName": "Work Zilla Agent",
    "directories": {
      "buildResources": "electron"
    },
    "electronLanguages": [
      "en-US"
    ],
    "files": [
      "electron/**/*",
      "!electron/monitor/**",
      "renderer/dist/**/*",
      "package.json"
    ],
    "asar": true,
    "compression": "maximum",
    "mac": {
      "identity": "-",
      "target": ["dmg"],
      "extraResources": [
        {
          "from": "electron/uninstall.sh",
          "to": "uninstall.sh"
        },
        {
          "from": "mac_helper/build",
          "to": "mac_helper"
        }
      ]
    },
    "pkg": {
      "scripts": "electron/pkg-scripts"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "include": "electron/installer.nsh"
    }
  }
}
